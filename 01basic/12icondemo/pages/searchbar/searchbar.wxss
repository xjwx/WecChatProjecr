.top-group{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #00b51D;
}

.search-group{
  width: 100%;
  height: 70rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 20rpx;
}

.search-group .search-icon{
  flex-basis: 20px;
}

.search-group .clear-icon{
  flex-basis: 20px;
}

.search-group .search-input{
  flex:1;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.placeholder-input{
  font-size: 28rpx;
}